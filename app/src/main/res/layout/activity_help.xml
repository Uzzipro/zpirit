<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bggrey"
    tools:context=".Activities.HelpActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/llToolbarHome"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/bggrey"
        android:orientation="horizontal"
        android:padding="@dimen/_10_dp"
        android:weightSum="1"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivBack"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:padding="@dimen/_5_dp"
            android:src="@drawable/ic_back" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvHomeFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:fontFamily="@font/sfproroundedbold"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="Help"
            android:textColor="@color/black"
            android:textSize="@dimen/_24_sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbarHome" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/llPhNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_20_dp"
        android:layout_marginVertical="@dimen/_20_dp"
        android:background="@drawable/dialog_white_bg"
        android:padding="@dimen/_15_sp"
        app:layout_constraintTop_toBottomOf="@id/llToolbarHome">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPhNumberContactus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sfproroundedsemibold"
            android:text="Contact us at: +91 9780512382"
            android:textColor="@color/black" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_etWriteComplaint"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginHorizontal="@dimen/_20_dp"
        android:layout_marginTop="@dimen/_30_dp"
        android:hint="Write to us here"
        app:layout_constraintTop_toBottomOf="@id/llPhNumber">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etWriteComplaint"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/dialog_white_bg"
            android:fontFamily="@font/sfproroundedregular"
            android:gravity="top|start"
            android:padding="@dimen/_15_dp"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:textSize="@dimen/textsize_17sp" />
    </com.google.android.material.textfield.TextInputLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btSubmitComplaint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_30_dp"
        android:layout_marginTop="@dimen/_20_sp"
        android:background="@drawable/btbg"
        android:fontFamily="@font/sfproroundedmedium"
        android:text="Submit complaint"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/til_etWriteComplaint" />
</androidx.constraintlayout.widget.ConstraintLayout>