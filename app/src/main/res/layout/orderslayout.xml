<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/llOrderDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/_20_sp"
        android:weightSum="1"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:orientation="vertical">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/_10_dp"
                android:weightSum="1">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvOrderNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10_dp"
                    android:layout_weight="0.7"
                    android:fontFamily="@font/sfproroundedsemibold"
                    android:text="Order#1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_20_sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvOrderStatus"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="@dimen/_40_dp"
                    android:layout_marginVertical="@dimen/_2_dp"
                    android:layout_weight="0.3"
                    android:background="@drawable/orderstatusbg"
                    android:gravity="center"
                    android:text="Delivered"
                    android:textColor="@color/green" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/llDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/_20_dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sfproroundedsemibold"
                    android:text="23 Feb 2021,  08:21 PM"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/_15_sp" />


            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_weight="0.8"
            android:orientation="vertical">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivProfilePicture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_profileplaceholder" />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/grey"
        android:id="@+id/dividingView"
        app:layout_constraintTop_toBottomOf="@id/llOrderDetails"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_10_dp"
        app:layout_constraintTop_toBottomOf="@id/dividingView">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sfproroundedmedium"
            android:text="ITEMS"
            android:textColor="@color/grey"
            android:layout_marginLeft="@dimen/_20_dp"
            android:textSize="@dimen/_15_sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20_dp"
            android:fontFamily="@font/sfproroundedmedium"
            android:text="1 x All Seasons, 1 x Bro Code, 1 x Beer, 1 x Breezer"
            android:textColor="@color/black"
            android:textSize="@dimen/_15_sp" />


        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/_20_dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sfproroundedmedium"
            android:text="Grand Total"
            android:layout_marginTop="@dimen/_15_dp"
            android:textColor="@color/grey"
            android:textSize="@dimen/_15_sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20_dp"
            android:fontFamily="@font/sfproroundedsemibold"
            android:text="â‚¹1500"
            android:textColor="@color/black"
            android:textSize="@dimen/_20_sp" />


        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btRateOrder"
            android:layout_marginTop="@dimen/_10_dp"
            android:textAllCaps="false"
            android:background="@drawable/rateorderbuttonstyle"
            android:textColor="@color/red"
            android:textSize="@dimen/_12_sp"
            android:text="Rate Order"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.constraintlayout.widget.ConstraintLayout>