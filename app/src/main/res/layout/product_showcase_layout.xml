<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="190dp"
    android:layout_height="420dp"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:id="@+id/clProductMain"
    android:paddingHorizontal="@dimen/_10_dp"
    android:paddingBottom="@dimen/_20_dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/llMain"
        android:layout_width="170dp"
        android:layout_height="320dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/productlayoutbg"
        android:elevation="5dp"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvProductType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="115dp"
            android:fontFamily="@font/sfproroundedregular"
            android:gravity="center"
            android:text="Whiskey"
            android:textColor="@color/grey"
            android:textSize="@dimen/_14_sp" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvProductName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/sfproroundedsemibold"
            android:gravity="center"
            android:maxLines="1"
            android:minEms="3"
            android:text="This is the new daru we have honey woooossss"
            android:textColor="@color/black"
            android:textSize="@dimen/_22_sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvProductMeasurement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sfproroundedregular"
            android:gravity="center"
            android:text="750ml"
            android:textColor="@color/grey"
            android:textSize="@dimen/_14_sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvProductPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5_dp"
            android:fontFamily="@font/sfproroundedsemibold"
            android:gravity="center"
            android:text="Rs. 700"
            android:textColor="@color/orange"
            android:textSize="@dimen/_22_sp" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btAddToCart"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35_dp"
            android:layout_marginHorizontal="@dimen/_15_dp"
            android:layout_marginTop="@dimen/_30_dp"
            android:background="@drawable/btbg"
            android:fontFamily="@font/sfproroundedsemibold"
            android:text="@string/add_to_cart"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_10_sp" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivProductImg"
        android:layout_width="48dp"
        android:layout_height="160dp"
        android:elevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>