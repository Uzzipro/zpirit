<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/dialog_white_bg2">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/llEnterAddressDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="@dimen/_20_dp"
        android:paddingHorizontal="@dimen/_10_dp"
        android:weightSum="1"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvEnterAddressDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:fontFamily="@font/sfproroundedmedium"
            android:text="@string/select_delivery_address_text"
            android:textColor="@color/black"
            android:textSize="@dimen/_20_sp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/tvCloseDialog"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:padding="@dimen/_10_dp"
            android:src="@drawable/ic__cross" />
    </androidx.appcompat.widget.LinearLayoutCompat>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/llRv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:visibility="gone"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/llEnterAddressDetails">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvShowAddress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:layout_marginBottom="100dp"
            android:scrollbars="vertical" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvAddAddress"
        android:layout_marginLeft="@dimen/_20_dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_address"
        android:textColor="@color/black"
        android:textSize="@dimen/_15_sp"
        android:drawableLeft="@drawable/ic_plus"
        android:fontFamily="@font/sfproroundedmedium"
        app:layout_constraintTop_toBottomOf="@id/llEnterAddressDetails"/>


</androidx.constraintlayout.widget.ConstraintLayout>